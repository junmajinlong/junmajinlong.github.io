server {
    listen 443 ssl;
    server_name {{trojan_domain}};

    ssl_certificate {{nginx_ssl_path}}/{{trojan_domain}}.cer;
    ssl_certificate_key  {{nginx_ssl_path}}/{{trojan_domain}}.key;

    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  5m;
    ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers  HIGH:!ADH:!EXPORT56:RC4+RSA:+MEDIUM;
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass         https://www.{{blog_domain}};
    }
}
server {
    listen 80;
    server_name ${domain2};
    location / {
        proxy_pass https://www.{{blog_domain}};
    }
}